<?xml version="1.0"?>
<config>
    <sections>
        <meanbee_autocategories>
            <groups>
                <sale_category translate="label" module="meanbee_salecategory">
                    <label>Sale Category Options</label>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <category translate="label comment">
                            <label>Category</label>
                            <comment><![CDATA[This category will be managed automatically. Any existing products will be removed from the category.]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>meanbee_autocategories/system_config_source_category</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </category>
                    </fields>
                </sale_category>
            </groups>
        </meanbee_autocategories>
    </sections>
</config>
